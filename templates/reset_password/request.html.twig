{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <main>
        <div class="bgcontainerdefault">
            <div class="wrapper">
                <form action="{{ path('app_forgot_password_request') }}" method="post" class="blocform">
                    <h1>Réinitialiser votre mot de passe</h1>
                    <div class="formgroup">
                        <label for="">E-mail</label>
                        {{ form_widget(requestForm.email) }}
                    </div>
                    {{ form_widget(requestForm._token) }}
                    <button type="submit" class="btn btn-secondary" ><span>Réinitialiser</span></button>
                </form>
            </div>
        </div>
    </main>
{% endblock %}
