<div class="membre__content--item">
    <div class="logoitem">
        <img src="{{ asset('uploads/etablissements/' ~ etablissement.getAvatar()) }}" alt="">
    </div>
    <div class="texteitem">
        <div class="titreitem">{{ etablissement.nom }}</div>
        <ul>
            {% if etablissement.category is not null %}
                <li><span class="domaine"> {{ etablissement.category }}</span></li>
            {% endif %}
            {% if etablissement.region is not null %}
                <li> <span  class="localisation">{{ etablissement.region }}</span></li>
            {% endif %}
        </ul>
    </div>
    <a href="{{ path('app_etablissement', {category_slug:etablissement.category.slug, etablissement_slug:etablissement.slug}) }}" class="voir">Voir plus</a>
</div>
