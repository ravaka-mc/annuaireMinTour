{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<main>
	<div class="bgcontainerdefault pageContact">
		<div class="wrapper">
			<form action="" name="{{ form.vars.full_name }}" method="post" class="blocform">
				<h1>Contact</h1>
				<div class="grid-50">
					<div class="formgroup">
						<label for="">Nom</label>
						{{ form_widget(form.nom) }}
					</div>
					<div class="formgroup">
						<label for="">Pr√©nom</label>
						{{ form_widget(form.prenom) }}
					</div>
				</div>
				<div class="formgroup">
					<label for="">E-mail</label>
					{{ form_widget(form.email) }}
				</div>
				<div class="formgroup">
					<label for="">Message</label>
					{{ form_widget(form.message) }}
				</div>
				{{ form_widget(form._token) }}
				<button type="submit" class="btn btn-secondary" ><span>Envoyer</span></button>
			</form>
		</div>
	</div>
</main>

{% endblock %}
