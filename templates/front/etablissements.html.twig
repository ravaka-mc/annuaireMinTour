{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<main>
    
    <div class="top-page">
        <div class="wrapper">
            {% if category is defined %}
            <h1>Tous les {{ category.nom }} à Madagascar</h1>
            {% elseif region is defined %}
            <h1>Tous établissement formels d’hébergement à {{ region.nom }}</h1>
            {% elseif search is defined %}
            <h1>Résultats de recherche pour {{ search }}</h1>
            {% endif %}
        </div>
    </div>
    <div class="form-search">
        <div class="wrapper">
            <form action="{{ path('app_search') }}" class="bg-white">
                <div>
                    <div class="formgroup searchgroup">
                        <input type="text" name="s" placeholder="" value="{{ search }}">
                        <button type="submit"class="send" ></button>
                    </div>
                    <div class="formgroup searchgroup region">
                        <label for="region-select">Region</label>
                        <select name="region" id="Region-select">
                            <option value=""></option>
                            {% for region in regions %}
                                <option value="{{ region.id }}" {% if region.id == region_id %}selected{% endif %}>{{ region.nom }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="formgroup searchgroup">
                        <label for="activite-select">Activités</label>
                        <select name="activite" id="activite-select">
                            <option value=""></option>
                            {% for activite in activites %}
                                <option value="{{ activite.id }}" {% if activite.id == activite_id %}selected{% endif %}>{{ activite.nom }}</option>
                            {% endfor %}
                        </select>
                        <button type="submit" class="btn-filter"><span>Filtrer</span></button>
                    </div>
                </div>
                </form>
        </div>
    </div>
	{% if etablissements %}
	<div class="membre bg_white">
		<div class="wrapper">
			<div class="membre__content">

				{% for etablissement in etablissements %}
					{% include "front/block/etablissement.html.twig" %}
				{% endfor %}

			</div>
		</div>
	</div>
	{% else %}

	<div class="membre aucun bg_white">
		<div class="wrapper">
			<h2>Aucun établissement trouvé</h2>
			<p>Désolé, nous n'avons trouvé aucun établissement correspondant à votre recherche, essayé à nouveau</p>
		</div>
	</div>

	{% endif %}
</main>
{% endblock %}
{% block javascripts %}
   <script>
        jQuery(document).ready(function ($) {
            $('.temoignages__slick').slick({
                infinite: true,
                dots: true,
                pauseOnHover: true,
                slidesToShow: 1,
                arrows: false,
                slidesToScroll:1,
                fade: false,
                responsive: [
                    {
                        breakpoint: 600,
                        settings: {
                            slidesToShow: 1,
                            dots: true,
                            slidesToScroll:1,
                        }
                    }
                ]
            });
            $("select").niceSelect();
        });
    </script>
{% endblock %}
